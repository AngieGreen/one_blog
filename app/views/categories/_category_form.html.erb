<%= form_for(@category) do |f| %>
  <div class="field">
        <div class="row">
      <%= f.text_area :name, placeholder: "What's the project name?", :size => "80%" %>
    </div>
    <div class="row">
      <%= f.text_area :week, placeholder: "Week number?", :size => "80%" %>
    </div>
    <div class="row">
      <%= f.text_area :minicontent, placeholder: "Tell me a bit about it...", :size => "80%" %>
    </div>
  </div>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>