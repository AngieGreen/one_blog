<div class="form-group">
  <%= form_for([@category, @category.posts.build]) do |f| %>
    <div class="field">
      <%= f.text_area :day, placeholder: "What day is it?", :size => "80%" %>
        <br><br>
      <%= f.text_area :title, placeholder: "Title here...", :size => "80%" %>
        <br><br>
      <%= f.text_area :content, placeholder: "Add the content...", :size => "80%" %>

      <%= hidden_field_tag :user_id[1] %>
    </div>

    <div class="actions">
    <%= f.submit "Add", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>